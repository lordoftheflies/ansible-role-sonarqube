---
extends: default
skip_list:
  - '301'
rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  colons:
    max-spaces-after: -1
    level: error
  commas:
    max-spaces-after: -1
    level: error
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines:
    max: 3
    level: error
  hyphens:
    level: error
  indentation: disable
  key-duplicates: enable
  new-line-at-end-of-file: disable
  new-lines:
    type: unix
  trailing-spaces: disable
  truthy: disable
  line-length:
    max: 160
    level: warning
ignore: |
  env
  build
  files
  .github
  .gitlab
  .vagrant
  .ansible-lint
  .env
  .venv
  .ansible
  .ansible-galaxy
  _config.yml
